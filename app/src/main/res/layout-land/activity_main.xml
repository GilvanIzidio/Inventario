<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background_720x1440"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button16"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/segoeui"
        android:onClick="entrar"
        android:text="DIGITAÇÃO DO INVENTARIO"
        android:textColor="@color/CorBack"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImportar" />

    <Button
        android:id="@+id/btnImportar"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/borda_arredondada_com_branco"
        android:fontFamily="@font/segoeui"
        android:onClick="importarInventario"
        android:text="IMPORTAÇÃO DE INVENTARIO"
        android:textColor="@color/Preto"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="126dp"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        app:layout_constraintBottom_toTopOf="@+id/btnImportar"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_telainicial" />

    <Button
        android:id="@+id/btnExportacao"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/segoeui"
        android:text="EXPORTAÇÃO DO INVENTARIO"
        android:textColor="@color/CorBack"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button16"
        android:onClick="exportarInventario"/>

</androidx.constraintlayout.widget.ConstraintLayout>