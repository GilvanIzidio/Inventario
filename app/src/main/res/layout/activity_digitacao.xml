<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actDigitacao">

    <EditText
        android:id="@+id/edtResultado"
        android:layout_width="311dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:ems="14"
        android:focusable="true"
        android:gravity="center"
        android:hint="Codigo de Barras"
        android:fontFamily="@font/segoeui"
        android:background="@drawable/edit_custom"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNomeProduto" />

    <Button
        android:id="@+id/btnScan"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/borda_arredondada"
        android:text="Ler Produto"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/CorBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtResultado" />

    <TextView
        android:id="@+id/textNomeProduto"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/azulbotao"
        android:textSize="25sp"
        app:fontFamily="@font/archivo_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtQtd"
        android:layout_width="311dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:ems="14"
        android:gravity="center"
        android:inputType="number"
        android:fontFamily="@font/segoeui"
        android:textSize="33sp"
        android:background="@drawable/edit_custom"
        app:layout_constraintStart_toEndOf="@+id/edtResultado"
        app:layout_constraintTop_toBottomOf="@+id/textNomeProduto" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/borda_arredondada"
        android:text="Colocar valor"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/CorBack"
        app:layout_constraintStart_toEndOf="@+id/btnScan"
        app:layout_constraintTop_toBottomOf="@+id/edtQtd" />

</androidx.constraintlayout.widget.ConstraintLayout>

